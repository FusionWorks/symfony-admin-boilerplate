{{ form_start(form) }}
<div class="box box-primary">
    <div class="box-body">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.user) }}
                {{ form_widget(form.user, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.user) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.company) }}
                {{ form_widget(form.company, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.company) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.contacts) }}
                {{ form_widget(form.contacts, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.contacts) }}</span>
            </div>
        </div>
        <button class="btn bg-navy">{{ button_label|default('Save') }}</button>
        <a class="btn btn-default" href="{{ path('seller_index') }}">Back to list</a>
    </div>
</div>
{{ form_end(form) }}

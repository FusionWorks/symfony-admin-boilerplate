{{ form_start(form) }}

<div class="box box-primary">
    <div class="box-body">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.name) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.seller) }}
                {{ form_widget(form.seller, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.seller) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.price) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.description) }}</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.file) }}
                {{ form_widget(form.file, {'attr' : { 'class': 'form-control'}}) }}
            </div>
            <div class="has-error">
                <span class="help-block">{{ form_errors(form.file) }}</span>
            </div>
        </div>
        <div class="col-md-12">
            <button class="btn bg-navy">{{ button_label|default('Save') }}</button>
            <a class="btn btn-default" href="{{ path('products_index') }}">Back to list</a>
        </div>
    </div>
</div>
{{ form_end(form) }}

{% extends 'admin/layout.html.twig' %}

{% block title %}Products{% endblock %}

{% block content %}
    <h1>Products</h1>
    <div class="box box-primary">
        <div class="box-body table-responsive ">
            <table class="table table-bordered table-striped dataTable">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{% if product.image %}
                            <img class="img-thumbnail center-block" src="{{ asset('uploads/image/' ~ product.image) }}"
                                 alt="img" style="max-height: 135px; max-width: 200px;">
                        {% else %}
                            <spnan>No image</spnan>
                        {% endif %}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-default" href="{{ path('products_index') }}">Back to list</a>

            <a class="btn bg-navy" href="{{ path('products_edit', {'id': product.id}) }}">Edit</a>

            {{ include('admin/products/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
